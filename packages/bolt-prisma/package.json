{
    "name": "@dealops/bolt-prisma",
    "version": "1.0.6",
    "description": "Bolt for JavaScript Installation Store Extension - Prisma",
    "main": "dist/index.js",
    "scripts": {
        "bolt": "npm run prepare && npx ts-node src/tests/bolt-example.ts",
        "prepare": "npm run build",
        "build": "tsc",
        "build:clean": "shx rm -rf ./dist ./coverage ./.nyc_output",
        "lint": "eslint --fix --ext .ts src",
        "mocha": "TS_NODE_PROJECT=tsconfig.json nyc mocha --config .mocharc.json \"src/**/*.spec.ts\"",
        "prisma": "npx prisma migrate dev --name init && npx prisma generate",
        "test": "npm run lint && npm run prisma && npm run mocha",
        "coverage": "codecov",
        "watch": "npx nodemon --watch 'src' --ext 'ts' --exec npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Dealops/slack-bolt-extensions.git"
    },
    "keywords": [
        "Prisma",
        "OAuth",
        "Bolt",
        "Slack",
        "Slack Platform",
        "Slack Bot",
        "Slack API"
    ],
    "author": "Kazuhiro Sera",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Dealops/slack-bolt-extensions/issues"
    },
    "homepage": "https://github.com/Dealops/slack-bolt-extensions#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "dependencies": {
        "@prisma/client": "^3.15.2",
        "@slack/logger": "^3.0.0",
        "@slack/oauth": "^3.0.3",
        "@slack/web-api": "^7.9.3",
        "@types/node": "^17.0.45"
    },
    "devDependencies": {
        "bolt-extension-test-kit": "file:../bolt-extension-test-kit",
        "prisma": "^3.15.2"
    }
}
